<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning btn-sm">
            Back
        </a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <img src="http://localhost:3300/<%= booking.payments.proofPayment %>" alt="imageUrl" style="width: 100%; display:block">
                <%if(booking.payments.status == 'Proses') { %>
                    <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="post">
                        <button type="submit" class="btn btn-sm btn-block btn-success mb-2">
                            <i class="fa fa-check"></i>
                            Confirmation
                        </button>
                    </form>
    
                    <form action="/admin/booking/<%= booking.id %>/REJECT?_method=PUT" method="post">
                        <button type="submit" class="btn btn-sm btn-block btn-danger">
                            <i class="fa fa-times"></i>
                            Reject
                        </button>
                    </form>
                <% } %>
            </div>
            <div class="col-lg-8">
                <!-- table -->
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nama member</th>
                                <th>Total</th>
                                <th>Nama Bank</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %></td>
                                <td><%= booking.total %></td>
                                <td><%= booking.bankId.nameBank %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>