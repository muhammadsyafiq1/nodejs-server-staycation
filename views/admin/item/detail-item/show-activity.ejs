<div class="tab-pane fade item " id="item" role="tabpanel" aria-labelledby="item-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                <!-- form -->
                <form action="/admin/item/add/activity" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="type">Type</label>
                            <input type="text" name="type" id="type" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="image">image</label>
                            <input type="file" name="image" id="image" class="form-control" required>
                        </div>
                        <input type="hidden" name="itemId" value="<%= itemId %>">
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                </form>
                </div>
                <div class="col-md-7">
                    <!-- table -->
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let activity = 0; activity < activities.length; activity++) { %>
                                    <tr>
                                        <td><%= activity + 1 %></td>
                                        <td><%= activities[activity].name %></td>
                                        <td><%= activities[activity].type %></td>
                                        <td>
                                            <img src="http://localhost:3300/<%= activities[activity].imageUrl %>" height="30px" width="30px">
                                        </td>
                                        <td>
                                            <form action="/admin/item/<%= itemId %>/activity/delete/<%= activities[activity].id %>?_method=DELETE" method="post">
                                                <a href="javascript:void()"
                                                    data-id="<%= activities[activity].id %>"
                                                    data-name="<%= activities[activity].name %>"
                                                    data-type="<%= activities[activity].type %>"
                                                    type="button"
                                                    class="btn btn-sm btn-circle btn-warning button-update"
                                                >
                                                <i class="fa fa-edit"></i>
                                            </a>
                                                <button type="submit" class="btn btn-sm btn-circle btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>