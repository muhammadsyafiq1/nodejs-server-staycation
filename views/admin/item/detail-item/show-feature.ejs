<div class="tab-pane fade show active" id="show" role="tabpanel" aria-labelledby="show-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                <!-- form -->
                <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">

                    <div class="form-group">
                      <label for="name">Name</label>
                      <input type="text" class="form-control" name="name" placeholder="Enter name" required>
                    </div>
                    <div class="form-group">
                      <label for="name">QTY</label>
                      <input type="number" class="form-control" name="qty" placeholder="Enter qty" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Image</label>
                      <input type="file" class="form-control" name="image" required>
                    </div>
                    <input type="hidden" value="<%= itemId %>" name="itemId">
                    <button type="submit" class="btn btn-primary">save</button>
                  </form>
                </div>
                <div class="col-md-7">
                    <!-- table -->
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>QTY</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let feature = 0; feature < features.length; feature++) { %>
                                    <tr>
                                        <td><%= feature + 1 %></td>
                                        <td><%= features[feature].name %></td>
                                        <td><%= features[feature].qty %></td>
                                        <td>
                                            <img src="http://localhost:3300/<%= features[feature].imageUrl %>" height="30px" width="30px">
                                        </td>
                                        <td>
                                            <form action="/admin/item/<%= itemId %>/feature/delete/<%= features[feature].id %>?_method=DELETE" method="post">
                                                <a href="javascript:void()"
                                                    data-id="<%= features[feature].id %>"
                                                    data-name="<%= features[feature].name %>"
                                                    data-qty="<%= features[feature].qty %>"
                                                    type="button"
                                                    class="btn btn-sm btn-circle btn-warning button-update"
                                                >
                                                <i class="fa fa-edit"></i>
                                            </a>
                                                <button type="submit" class="btn btn-sm btn-circle btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>